# Environment
NODE_ENV=development

# Backend
BACKEND_PORT=3000

# Frontend
FRONTEND_PORT=8080
VUE_APP_API_URL=http://localhost:3000

# Database
POSTGRES_USER=servai
POSTGRES_PASSWORD=servai_dev_pass
POSTGRES_DB=servai
POSTGRES_PORT=5432
DATABASE_URL=postgresql://servai:servai_dev_pass@localhost:5432/servai

# Redis
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT (⚠️ CHANGE THIS IN PRODUCTION!)
JWT_SECRET=CHANGE_THIS_SECRET_IN_PRODUCTION_USE_STRONG_RANDOM_STRING
JWT_EXPIRES_IN=7d

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# Perplexity Sonar API
PERPLEXITY_API_KEY=
SONAR_MODEL=llama-3.1-sonar-small-128k-online
SONAR_MAX_TOKENS=4096
SONAR_TEMPERATURE=0.2

# CORS (comma-separated list of allowed origins for production)
ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# Platform Settings
PLATFORM_NAME=servAI
PLATFORM_EMAIL=support@servai.example
PLATFORM_COMMISSION_FIXED=0
PLATFORM_COMMISSION_PERCENT=5

# File Storage
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# Retention (in days)
RETENTION_AUDIT_LOGS=90
RETENTION_FILES=365
RETENTION_INVITES=7
RETENTION_INVOICES_PLATFORM=1095

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
MESSAGE_FLOOD_THRESHOLD=10
MESSAGE_FLOOD_BASE_DELAY_MS=1000

# Database Pool
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE=10000
DB_POOL_TIMEOUT=5000
