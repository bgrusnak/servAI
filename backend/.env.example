# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/servai_dev

# Redis
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=servai:dev:

# JWT
JWT_SECRET=your_secret_key_min_32_chars_long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email (SendGrid, Mailgun, etc.)
EMAIL_API_URL=https://api.sendgrid.com/v3
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@servai.app
EMAIL_FROM_NAME=servAI

# Application
APP_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info

# Monitoring
METRICS_ENABLED=true

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_USE_WEBHOOK=false
TELEGRAM_WEBHOOK_URL=https://your-domain.com
TELEGRAM_WEBHOOK_SECRET=random_secret_for_webhook_verification

# Perplexity AI
PERPLEXITY_API_KEY=your_perplexity_api_key
PERPLEXITY_TIMEOUT_MS=10000
PERPLEXITY_RATE_LIMIT=60

# Telegram Bot Configuration
CONVERSATION_HISTORY_LIMIT=20
INTENT_CONFIDENCE_THRESHOLD=0.7
CONVERSATION_RETENTION_DAYS=30

# Stripe (for future billing)
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
