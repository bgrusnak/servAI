# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://servai:servai123@localhost:5432/servai

# Redis (for BullMQ only)
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=servai:

# JWT
JWT_SECRET=your-super-secret-key-change-this-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_USE_WEBHOOK=false
TELEGRAM_WEBHOOK_URL=
TELEGRAM_RATE_LIMIT_PER_SECOND=25

# Perplexity AI (Sonar)
PERPLEXITY_API_KEY=
SONAR_MODEL=llama-3.1-sonar-small-128k-online
SONAR_MAX_TOKENS=4096
SONAR_TEMPERATURE=0.2
CONVERSATION_HISTORY_LIMIT=20
INTENT_CONFIDENCE_THRESHOLD=0.7

# Stripe Payments
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# File Storage (Local)
UPLOAD_DIR=./uploads

# Email (optional)
EMAIL_API_URL=
EMAIL_API_KEY=
EMAIL_FROM=noreply@servai.app
EMAIL_FROM_NAME=servAI

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Data Retention
AUDIT_LOGS_RETENTION_DAYS=90
TELEGRAM_MESSAGES_RETENTION_DAYS=30
REFRESH_TOKENS_RETENTION_DAYS=7
